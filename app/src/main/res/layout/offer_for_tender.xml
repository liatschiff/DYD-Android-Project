<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/white_426x640"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/coordinator">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/test"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/info_order_layout"
            android:padding="18dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/brown"
                android:text="@string/name_of_design"
                android:id="@+id/order_name_tv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/gloves_sec"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:gravity="start"
                android:id="@+id/order_category_tv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/sleeves_sec"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:gravity="start"
                android:id="@+id/order_purpose_tv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:text="@string/prefer_fabrics"
                android:gravity="start"
                android:id="@+id/order_fabrics_tv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/cleavage_shape"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:gravity="start"
                android:id="@+id/order_cleavage_shape_tv"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:text="@string/back_shape"
                android:gravity="start"
                android:id="@+id/order_back_shape_tv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/dress_length_sec"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:gravity="start"
                android:id="@+id/order_length_dress_tv"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height_sec"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:layout_marginStart="7dp"
                    android:id="@+id/order_client_high_tv"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:text="@string/measurments"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:text="@string/bust_sec"
                    android:layout_marginStart="7dp"
                    android:id="@+id/bust_tv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waist_sec"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:layout_marginStart="7dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/waist_tv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:inputType="numberDecimal"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:text="@string/hips_sec"
                    android:id="@+id/hips_tv"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:text="@string/fabric_dist_sec"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:text="@string/bust_sec"
                    android:layout_marginStart="7dp"
                    android:id="@+id/dist_bust_tv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waist_sec"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:layout_marginStart="7dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/dist_waist_tv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:inputType="numberDecimal"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:text="@string/hips_sec"
                    android:id="@+id/dist_hips_tv"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:text="@string/another_description"
                android:id="@+id/another_description_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:text="@string/max_price"
                android:id="@+id/maxprise_tv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/final_date_sec"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:id="@+id/final_date_tv"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/message_action"
                android:id="@+id/message_client_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:text="@string/contact_me"/>

                <ImageView
                    android:id="@+id/photo_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginStart="43dp"
                     />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:gravity="end"
                        android:fontFamily="casual"
                        android:layout_margin="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/brown"
                        android:text="@string/offers"
                        android:textSize="20sp" />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:id="@+id/cancel_order_btn"
                    android:background="@drawable/selectorforall"
                    android:layout_gravity="end"
                    android:layout_marginStart="40dp"
                    android:text="Cancel Order"/>


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_offers"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/fab" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>

